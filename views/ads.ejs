<!DOCTYPE html>
<html lang="en">

<head>

    <% include ./partials/head %>

</head>

<body>

    <div id="wrapper">

        <!-- Navigation -->
        <% include ./partials/sidebar %>

        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h3 class="page-header"><i class="fa fa-files-o"></i> All Ads</h3>
                    <ol class="breadcrumb">
                      <li><i class="fa fa-home"></i><a href="/admin">Home</a></li>
                      <li><i class="fa fa-files-o"></i>All Ads</li>
                    </ol>
                </div>
                <!-- /.col-lg-12 -->
            </div>
              <!-- /.row -->
              <div class="row">
                  <div class="col-lg-12">
                      <div class="panel panel-default">
                          <div class="panel-heading">
                              <i class="fa fa-files-o fa-fw"></i> Ads
  
                              <div class="pull-right">
                                  <div class="btn-group">
                                      <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
                                          Actions
                                          <span class="caret"></span>
                                      </button>
                                      <ul class="dropdown-menu pull-right" role="menu">
                                        <li><a href="/admin/createad">Create Ad</a>
                                        </li>
                                          <li><a href="#">Delete All</a>
                                          </li>
                                      </ul>
                                  </div>
                              </div>
  
                          </div>
                          <!-- /.panel-heading -->
                          <div class="panel-body">
                              <div class="row">
                                  <div class="col-lg-12">
                                  <div class="list-group">
                                      <% for(let i=0; i<ads.length; i++) { %>
                                    <div class="list-group-item" style="margin: 10px;">
                                      <h3><%= ads[i].owner %></h3>
                                      
                                      <img src="<%= ads[i].ad %>" class="" style="height:100px; width: auto">
                                      <p><a href="<%= ads[i].link %>"><%= ads[i].link %></a></p>
                                      
                                      <div style="margin-bottom:5px;">
                                        <span style="padding: 5px 5px;"> Status: <strong><%= ads[i].status %></strong></span>
                                        <span style="padding: 5px 5px;"> Position: <strong><%= ads[i].position %></strong></span> 
  
                                         <div class="btn-group pull-right">
                                          <a href="/admin/edit_ad<%= ads[i].id %>"><button class="btn btn-info" style="padding: 5px 5px;"> <i class="fa fa-edit"></i> Edit</button></a>
                                          <a href="/admin/delete_ad<%= ads[i].id %>"><button class="btn btn-danger" style="padding: 5px 5px;"> <i class="fa fa-trash"></i> Delete</button></a>
                                          </div>
  
                                      </div>
                                    </div>
                                    <% } %>

                                  </div>
                                  </div>
                                  <!-- /.col-lg-12 (nested) -->
                              </div>
                              <!-- /.row -->
                          </div>
                          <!-- /.panel-body -->
                      </div>
                  </div>
                  <!-- /.col-lg-12 -->
              </div>
            <!-- /.row -->
        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->

    <!-- jQuery -->
 <% include ./partials/footer.ejs %>

</body>

</html>
