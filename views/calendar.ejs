<!DOCTYPE html>
<html lang="en">

<head>

        <% include ./partials/head %>

</head>

<body>

    <div id="wrapper">

        <!-- Navigation -->
        <!-- Navigation -->
        <% include ./partials/sidebar %>
        <div id="page-wrapper">
          <div class="row">
              <div class="col-lg-12">
                  <h3 class="page-header"><i class="fa fa-calendar"></i> Ramadhan Calendar</h3>
                  <ol class="breadcrumb">
                    <li><i class="fa fa-home"></i><a href="/admin">Home</a></li>
                    <li><i class="fa fa-calendar"></i> Ramadhan Calendar</li>
                  </ol>
              </div>
              <!-- /.col-lg-12 -->
          </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <i class="fa fa-calendar fa-fw"></i> Ramadhan Calendars

                            <div class="pull-right">
                                <div class="btn-group">
                                    <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
                                        Actions
                                        <span class="caret"></span>
                                    </button>
                                    <ul class="dropdown-menu pull-right" role="menu">
                                      <li><a href="/admin/addcalendar">Add Calendar</a>
                                      </li>
                                        <li><a href="#">Delete All</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>

                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-12">
                                    <% for(var i=0; i<calendar.length; i++) { %>
                                <div class="list-group">
                                  <div class="list-group-item">
                                    <h3><%= calendar[i].title %> </h3>
                                    <div style="margin-bottom:5px;">
                                       <a href="#" style="padding: 5px 5px;"> <i class="fa fa-eye"></i> View</a>
                                       <iframe src="<%= calendar[i].calendar %>&embedded=true" style="width:600px; height:500px;" frameborder="0"></iframe>
                                       <div class="btn-group pull-right">
                                        <button class="btn btn-info" style="padding: 5px 5px;"> <i class="fa fa-edit"></i> Edit</button>
                                        <button class="btn btn-danger" style="padding: 5px 5px;"> <i class="fa fa-trash"></i> Delete</button>
                                        </div>

                                    </div>
                                  </div>
                                  <% } %>

                                  <div class="list-group-item">
                                    <h3>2017 Calendar</h3>
                                    <div style="margin-bottom:5px;">
                                       <a href="#" style="padding: 5px 5px;"> <i class="fa fa-eye"></i> View</a>

                                       <div class="btn-group pull-right">
                                        <button class="btn btn-info" style="padding: 5px 5px;"> <i class="fa fa-edit"></i> Edit</button>
                                        <button class="btn btn-danger" style="padding: 5px 5px;"> <i class="fa fa-trash"></i> Delete</button>
                                        </div>

                                    </div>
                                  </div>

                                  <div class="list-group-item">
                                    <h3>2016 Calendar</h3>
                                    <div style="margin-bottom:5px;">
                                       <a href="#" style="padding: 5px 5px;"> <i class="fa fa-eye"></i> View</a>

                                       <div class="btn-group pull-right">
                                        <button class="btn btn-info" style="padding: 5px 5px;"> <i class="fa fa-edit"></i> Edit</button>
                                        <button class="btn btn-danger" style="padding: 5px 5px;"> <i class="fa fa-trash"></i> Delete</button>
                                        </div>

                                    </div>
                                  </div>

                                </div>
                                </div>
                                <!-- /.col-lg-12 (nested) -->
                            </div>
                            <!-- /.row -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->

    <!-- jQuery -->
 <% include ./partials/footer.ejs %>

</body>

</html>
